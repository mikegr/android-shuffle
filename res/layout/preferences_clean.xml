<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    android:orientation="vertical" 
    android:padding="4dip"
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent"
    android:stretchColumns="1"
    >

	<TableRow
        style="@style/centered_row"
        android:paddingTop="5px"
        >
	    <TextView
	        android:layout_width="wrap_content" 
	        android:layout_height="wrap_content"
	        android:text="@string/delete_completed_title"
            style="@style/label"
	        />
	        
	    <Spinner android:id="@+id/delete_completed"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:drawSelectorOnTop="true"
	    />
		    
    </TableRow>

	<TableRow
        style="@style/centered_row"
        android:paddingTop="8px"
        >
	        
   	    <Button android:id="@+id/delete_completed_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_span="2"
            android:text="@string/delete_completed_button_title"
	        />
		    
    </TableRow>
    		    
    <TableRow
        style="@style/centered_row"
        android:paddingTop="8px"
        >
        	        
   	    <Button android:id="@+id/clean_slate_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_span="2"
            android:text="@string/clean_slate_button_title"
            />
            
	</TableRow>
						
</TableLayout>

