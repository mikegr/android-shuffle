<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/relLayout"
	android:orientation="horizontal" 
	android:layout_width="fill_parent"
	android:layout_height="?android:attr/listPreferredItemHeight"
	android:paddingLeft="3px" 
	android:paddingRight="7px" 
	android:gravity="center_vertical"
	android:baselineAligned="false">

	<TextView android:id="@+id/description"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
		android:paddingLeft="5px" 
		android:paddingRight="10px"
		android:singleLine="true"
		android:ellipsize="middle"
		style="@style/text" />

	<TextView android:id="@+id/details"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:paddingLeft="5px" 
		android:paddingRight="10px"
        android:layout_alignParentLeft="true"
		android:layout_below="@+id/description"        
		android:singleLine="true"
		android:ellipsize="marquee"
		style="@style/sub_text_2" />
	
	<TextView android:id="@+id/project"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
		android:paddingLeft="5px" 
		android:lines="1" 
		style="@style/sub_text_1" />


	<ImageView
		android:layout_width="wrap_content"
		android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
		android:scaleType="center" 
		android:paddingLeft="5px"
		android:paddingRight="5px" 
		android:gravity="center_horizontal"
		android:src="@drawable/user_input_icon"
		style="@style/image" 
		/>

	<TextView android:id="@+id/due_date"
		android:layout_width="wrap_content"
		android:layout_height="fill_parent" 
        android:layout_alignParentRight="true"
        android:gravity="bottom"
		android:paddingLeft="5px" 
		android:paddingRight="0px"
		style="@style/due_date" />
	
	<org.dodgybits.android.shuffle.view.LabelView
		android:id="@+id/context" 
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:layout_toLeftOf="@+id/due_date"
		android:layout_alignWithParentIfMissing="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="1px"
		android:drawablePadding="2px"
		android:paddingLeft="3px"
		android:paddingRight="3px"
		style="@style/context" />
		
</RelativeLayout>
