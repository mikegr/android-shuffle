<?xml version="1.0" encoding="utf-8"?>
<resources>

	<style name="ShuffleTheme" parent="@android:Theme" >        
    </style>

    <style name="activity">
    	<!--  <item name="android:background">@drawable/pale_weak_cyan</item> 
    	<item name="android:cacheColorHint">@drawable/pale_weak_cyan</item>
    	 -->
	</style>

    <style name="editor" parent="activity">
	</style>

    <style name="list" parent="activity">
    	<item name="android:divider">@android:drawable/divider_horizontal_bright</item> 
    	<item name="android:background">@drawable/pale_weak_cyan</item> 
    	<item name="android:cacheColorHint">@drawable/pale_weak_cyan</item>
	</style>

	<style name="image">
    	<item name="android:scaleType">fitCenter</item>
	</style>

    <style name="text">
        <item name="android:textColor">@drawable/white</item>
        <item name="android:textScaleX">0.9</item>
    	<item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
	</style>
	    
    <style name="text_editable" parent="text">
     	<item name="android:textColor">@drawable/black</item>
    	<item name="android:textAppearance">?android:attr/textAppearanceMediumInverse</item>
        <item name="android:typeface">sans</item>
    </style>

	<style name="context" parent="text">
    	<item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
		<item name="android:textScaleX">0.8</item>
        <item name="android:gravity">center</item>
	</style>

    <style name="label" parent="text">
    	<item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:typeface">normal</item>
        <item name="android:textScaleX">0.8</item>
        <item name="android:gravity">left</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingRight">5px</item>
    </style>

    <style name="preferences_label" parent="label">
        <item name="android:textColor">@drawable/white</item>
    </style>
    
    <style name="preferences_checkbox">
    </style>
    
    <style name="text_autocomplete" parent="text_editable">
    </style>

    <style name="text_dropdown" parent="text_editable">
    </style>

    <style name="list_text">
        <item name="android:textColor">@drawable/dark_gray</item>
        <item name="android:textScaleX">0.9</item>
    	<item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
	</style>

	<style name="list_sub_text_1" parent="list_text">
    	<item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textStyle">bold</item>
	</style>

	<style name="list_sub_text_2" parent="list_text">
    	<item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
	</style>

	<style name="due_date" parent="text">
    	<item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:gravity">right</item>
	</style>

    <style name="centered_row" parent="activity">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:baselineAligned">false</item>
    </style>
   
    <style name="top_row">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">top</item>
        <item name="android:baselineAligned">false</item>
    </style>
        
</resources>
