<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:padding="4dip"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:paddingBottom="10px" style="@style/editor">

	<TextView android:id="@+id/name_label"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" 
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
		android:paddingLeft="5px"
		android:paddingRight="5px" 
		android:text="@string/name_title"
		style="@style/label" />

	<EditText android:id="@+id/name" android:layout_width="fill_parent"
		android:layout_height="wrap_content" 
        android:layout_alignParentLeft="true"
		android:layout_below="@+id/name_label"        
		android:hint="@string/name_title"
		android:capitalize="sentences"
		android:autoText="true"
		android:singleLine="true"
		android:maxLength="50" 
		style="@style/text_editable"
		>
		<requestFocus />
	</EditText>

	<TextView android:id="@+id/colour_label"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" 
        android:layout_alignParentLeft="true"
		android:layout_below="@+id/name"        
		android:paddingLeft="5px"
		android:paddingRight="5px" android:text="@string/colour_title"
		style="@style/label" />

	<LinearLayout android:id="@+id/colour_frame"
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" 
        android:layout_alignParentLeft="true"
		android:layout_below="@+id/colour_label"        
		android:minHeight="?android:attr/listPreferredItemHeight"
		style="@style/centered_row"
		android:paddingLeft="25px">

		<TextView android:id="@+id/colour_display"
			android:layout_width="40px" android:layout_height="40px" />

		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_weight="1" />

		<Button android:id="@+id/colour_set_button"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_weight="1"
			android:text="@string/set_button_title" />

		<ImageButton android:id="@+id/colour_clear_button"
	        style="@style/MinusButton"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />

	</LinearLayout>

	<TextView android:id="@+id/icon_label"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" 
        android:layout_alignParentLeft="true"
		android:layout_below="@+id/colour_frame"        
		android:paddingLeft="5px"
		android:paddingRight="5px" android:text="@string/icon_title"
		style="@style/label" />

	<LinearLayout android:id="@+id/icon_layout"
		android:orientation="horizontal"
        android:layout_alignParentLeft="true"
		android:layout_below="@+id/icon_label"        
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" 
		android:minHeight="?android:attr/listPreferredItemHeight"
		style="@style/centered_row" 
		android:paddingLeft="25px">

		<ImageView android:id="@+id/icon_display"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:paddingLeft="5px"
			android:paddingRight="5px" android:layout_weight="1" />

		<TextView android:id="@+id/icon_none"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_weight="1"
			android:paddingLeft="5px" android:paddingRight="5px"
			android:text="@string/no_icon" />

		<Button android:id="@+id/icon_set_button"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_weight="1"
			android:text="@string/set_button_title" />

		<ImageButton android:id="@+id/icon_clear_button"
	        style="@style/MinusButton"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />

	</LinearLayout>

    <include android:id="@+id/save_panel" layout="@layout/editor_save_panel" 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
	    android:layout_alignParentBottom="true"
    />

</RelativeLayout>
